        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>/</directory>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>**/.svn/*</exclude>
                <exclude>.classpath</exclude>
                <exclude>.settings/**</exclude>
                <exclude>.project</exclude>
                <exclude>target/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>